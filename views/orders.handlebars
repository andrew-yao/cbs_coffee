    <div class="container mx-2">

        <h2 class="bd-title py-4">CBS Orders</h2>


        <table class="table table-bordered">
            <thead>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Ship Date</th>
                <th>Customer ID</th>
                <th>Recipient First Name</th>
                <th>Recipient Last Name</th>
                <th>Recipient Address</th>
                <th>City</th>
                <th>Zip</th>
                <th>Contact Phone #</th>
                <th>Subtotal</th>
                <th>Shipping Cost</th>
                <th>Total</th>
                <th>Quantity</th>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{order_date}}</td>
                    <td>{{ship_date}}</td>
                    <td>{{customer_id}}</td>
                    <td>{{ship_firstname}}</td>
                    <td>{{ship_lastname}}</td>
                    <td>{{ship_address}}</td>
                    <td>{{ship_city}}</td>
                    <td>{{ship_zip}}</td>
                    <td>{{ship_phone}}</td>
                    <td>${{order_subtotal}}</td>
                    <td>${{order_shipcost}}</td>
                    <td>${{order_totalcost}}</td>
                    <td>{{order_quantity}}</td>
                    <td><button onclick="deleteOrder({{id}})">Delete</button></td>
                    <td><a href="/orders/{{id}}">Update</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>


        <h2 class="bd-title py-4">Order Details</h2>

